{
  // Configurações globais padrão
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,

  // Configurações específicas por linguagem
  "[python]": {
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  "[javascript]": {
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },

  "[typescript]": {
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },

  "[javascriptreact]": {
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },

  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },

  "[json]": {
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },

  "[yaml]": {
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },

  "[yml]": {
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },

  // Configurações específicas do Python
  "python.defaultInterpreterPath": "./.venv/bin/python",
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.analysis.typeCheckingMode": "basic",

  // Configurações do editor
  "editor.rulers": [88, 120],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // Associações de arquivo para Excel
  "workbench.editorAssociations": {
    "*.xlsx": "gc-excelviewer-excel-editor",
    "*.xls": "gc-excelviewer-excel-editor",
    "*.csv": "gc-excelviewer-csv-editor"
  },

  // Desabilitar preview automático para extensões específicas
  "workbench.editor.enablePreview": false,

  // Configuração para arquivos Excel
  "files.associations": {
    "*.xlsx": "excel",
    "*.xls": "excel"
  }
}
